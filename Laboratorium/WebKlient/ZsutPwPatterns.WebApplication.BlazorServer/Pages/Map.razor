@page "/map"
@inject IController controller
@inject IModel model

<h5>Click to search pairs</h5>


<RadzenButton Icon="search" Text="Search" Click=@controller.SearchDoctorRoomAsync Style="width: 160px" />

<h5 style="margin-top: 16px">Doctor - room pairs</h5>

<RadzenListBox Name="pairList" Data=@model.PairList TValue="Pair" SelectedItem=@model.SelectedPair Style="width: 324px; height: 240px">
    <Template Context="pair">
        @pair.Doctor.Name @pair.Doctor.Surname at room @pair.Room.Number
    </Template>
</RadzenListBox>

<RadzenMenu>
  <RadzenMenuItem Text="Add" Icon="add" />
  <RadzenMenuItem Text="View" Icon="pageview" />
  <RadzenMenuItem Text="Edit" Icon="edit" />
</RadzenMenu>

<div style="margin-top: 12px; width: 324px; text-align: center">
  <RadzenLink Text="ZSUT IT PW home page" Path="https://zsut.tele.pw.edu.pl/" Target="_blank" />
</div>

@code {
  private IController controller_ = ControllerFactory.GetController( new EventDispatcher( ) );

  protected override async Task OnInitializedAsync( )
  {
    IModel model1 = controller_.Model;

    IModel model2 = controller.Model;

    IModel model3 = model;
  }
}
